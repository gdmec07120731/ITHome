<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardCornerRadius="10dp"

    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/rv_item_background"
        android:padding="10dp">


        <ImageView android:id="@+id/main_article_img"
                   android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentTop="true"
                   android:layout_marginRight="10dp"


        />
        <TextView android:id="@+id/main_article_title"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignTop="@+id/main_article_img"
                  android:layout_toRightOf="@+id/main_article_img"

                  android:textColor="@color/text_color_normal"
                  android:textSize="@dimen/textsize_normal"

        />
        <View android:id="@+id/main_article_line"
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_below="@+id/main_article_title"
              android:layout_marginTop="5dp"
              android:layout_toRightOf="@+id/main_article_img"
              android:background="@color/text_color_small"

        />


        <TextView android:id="@+id/main_article_content"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/main_article_line"
                  android:layout_marginTop="5dp"
                  android:layout_toRightOf="@+id/main_article_img"
                  android:textColor="@color/text_color_small"


        />
        <TextView android:id="@+id/main_article_createtime"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/main_article_content"
                  android:layout_marginTop="5dp"
                  android:layout_toRightOf="@+id/main_article_img"

                  android:textColor="@color/text_color_small"
                  android:textSize="@dimen/textsize_small"
        />

        <com.bilibili.magicasakura.widgets.TintTextView android:id="@+id/main_article_tag2"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_alignBottom="@+id/main_article_createtime"
                                                        android:layout_alignParentRight="true"
                                                        android:layout_below="@+id/main_article_content"
                                                        android:layout_marginTop="5dp"
                                                        android:background="@color/theme_color_primary_dark"
                                                        android:paddingLeft="2dp"
                                                        android:paddingRight="2dp"

                                                        android:textColor="@color/text_tag_color_small"

                                                        android:textSize="@dimen/textsize_small"
        />

        <com.bilibili.magicasakura.widgets.TintTextView android:id="@+id/main_article_tag1"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_alignBottom="@+id/main_article_createtime"
                                                        android:layout_below="@+id/main_article_content"
                                                        android:layout_marginRight="10dp"
                                                        android:layout_marginTop="5dp"
                                                        android:layout_toLeftOf="@+id/main_article_tag2"
                                                        android:background="@color/theme_color_primary_dark"
                                                        android:paddingLeft="2dp"
                                                        android:paddingRight="2dp"


                                                        android:textColor="@color/text_tag_color_small"
                                                        android:textSize="@dimen/textsize_small"
        />
    </RelativeLayout>


</android.support.v7.widget.CardView>